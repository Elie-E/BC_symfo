{% extends 'base.html.twig' %}

        {% block stylesheets %}
            {{ parent() }}            
        {% endblock %}

{% block title %}Register{% endblock %}

{% block body %}
    {# {{ parent() }} #}
    {% include 'elements/header.html.twig' %}

    <h1 class="text-center">S'enregistrer</h1>

    <div class="container my-5">
        {{ form_start(registrationForm) }}

            <div class="row my-5">
                <div class="col-md-6 col-sm-12 px-md-4 px-sm-4">
                <h3>Informations</h3>
                    <div class="form-control">
                        {{ form_label(registrationForm.genre) }}
                        {{ form_widget(registrationForm.genre, {'attr': {'class': 'register-form_input'}}) }}
                    </div>
                    <div class="form-control">
                        {{ form_label(registrationForm.clientName) }}
                        {{ form_widget(registrationForm.clientName, {'attr': {'class': 'register-form_input'}}) }}
                    </div>
                    <div class="form-control">
                        {{ form_label(registrationForm.clientFirstname) }}
                        {{ form_widget(registrationForm.clientFirstname, {'attr': {'class': 'register-form_input'}}) }}
                    </div>
                    <div class="form-control">
                        {{ form_label(registrationForm.clientDob) }}
                        {{ form_widget(registrationForm.clientDob, {'attr': {'class': 'register-form_input'}}) }}
                    </div>
                    <div class="form-control">
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'register-form_input'}}) }}
                    </div>
                    <div class="form-control">
                        {{ form_label(registrationForm.plainPassword) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'register-form_input'}}) }}
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 px-4">

                <h3>Adresse</h3>

                    <div class="form-control">
                        {{ form_label(adresseForm.number) }}
                        {{ form_widget(adresseForm.number, {'attr': {'class': 'register-form_input'}}) }}
                    </div>
                    <div class="form-control">
                        {{ form_label(adresseForm.line1) }}
                        {{ form_widget(adresseForm.line1, {'attr': {'class': 'register-form_input'}}) }}
                    </div>
                    <div class="form-control">
                        {{ form_label(adresseForm.line2) }}
                        {{ form_widget(adresseForm.line2, {'attr': {'class': 'register-form_input'}}) }}
                    </div>
                    <div class="form-control">
                        {{ form_label(adresseForm.line3) }}
                        {{ form_widget(adresseForm.line3, {'attr': {'class': 'register-form_input'}}) }}
                    </div>
                    <div class="form-control">
                        {{ form_label(adresseForm.code) }}
                        {{ form_widget(adresseForm.code, {'attr': {'class': 'register-form_input'}}) }}
                    </div>
                    <div class="form-control">
                        {{ form_label(adresseForm.location) }}
                        {{ form_widget(adresseForm.location, {'attr': {'class': 'register-form_input'}}) }}
                    </div>
                </div>
            </div>
            
            {{ form_row(registrationForm.agreeTerms) }}

            <div class="text-center"><button type="submit" class="btn btn-sm btn-secondary">S'enregistrer</button></div>

        {{ form_end(registrationForm) }}
    </div>
{# {% include 'elements/footer.html.twig' %} #}
{% endblock %}