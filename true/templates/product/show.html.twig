{% extends 'base-site.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="admin-page_content">
        <h1>Product</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Product_name</th>
                    <td>{{ product.productName }}</td>
                </tr>
                <tr>
                    <th>Product_description</th>
                    <td>{{ product.productDescription }}</td>
                </tr>
                <tr>
                    <th>Price_ht</th>
                    <td>{{ product.priceHt }}</td>
                </tr>
                <tr>
                    <th>Tva</th>
                    <td>{{ product.tva }}</td>
                </tr>
                <tr>
                    <th>IsAvailable</th>
                    <td>{{ product.isAvailable ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>
        <a href="{{ path('product_index') }}">back to list</a>
        <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
        {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}
