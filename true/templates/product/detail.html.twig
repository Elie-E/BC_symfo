{% extends 'base-site.html.twig' %}

    {% block body %}
    {{parent()}}


<!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">

      <!--Grid row-->
      <div class="row wow fadeIn">


        <!--Grid column-->
        <div class="col-md-6 mb-4">

	  <h4>{{ product.getProductName() }}</h4>

	  {% set images = product.getProductImages() %}

	  <img src="{{ asset('image/product/' ~ images[0].urlImage) }}" class="img-responsive img-fluid" alt="">

        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-6 mb-4">

          <!--Content-->
          <div class="p-4">
            <div class="mb-3">
              <a href="{{ path('category_show', {id: product.getCategory().getCategory().id}) }}">
                <span class="badge bg-primary mr-1">{{ product.getCategory().getCategory() }}</span>
              </a>
              <a href="{{ path('product_list', {id: product.getCategory().id}) }}">
                <span class="badge bg-secondary mr-1">{{ product.getCategory() }}</span>
              </a>
              <a href="">
                <span class="badge bg-info mr-1">Meilleurs ventes</span>
              </a>
            </div>

            <p class="lead">
              <span class="mr-1">
                <del>{{ (product.getPriceHt() * product.getTva)*2 }} €</del>
              </span>
              <span>{{ (product.getPriceHt() * product.getTva) }} €</span>
            </p>

            <p class="lead font-weight-bold">Description</p>

            <p>{{ product.getProductDescription() }}</p>

            <form class="d-flex justify-content-left">
              <!-- Default input -->
              <input type="number" value="1" min="1" aria-label="Search" class="form-control" style="width: 100px">

				  <a href="{{ path('cart_add', {id: product.id}) }}" class="btn btn-primary">Ajouter au panier<i class="fas fa-shopping-cart ml-1"></i></a>

            </form>


              {{ form_start(cartForm, {'attr': {'class': 'd-flex justify-content-left'}})}}
                {{ form_widget(cartForm.quantity)}}
                {{ form_widget(cartForm.addToCart)}}
              {{ form_end(cartForm)}}

          </div>
          <!--Content-->

        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->

      <hr>

      <!--Grid row-->
      <div class="row d-flex justify-content-center wow fadeIn">

        <!--Grid column-->
        <div class="col-md-6 text-center">

          <h4 class="my-4 h4">Informations complémentaires</h4>

          <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Natus suscipit modi sapiente illo soluta odit
            voluptates,
            quibusdam officia. Neque quibusdam quas a quis porro? Molestias illo neque eum in laborum.</p>

        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->

      <!--Grid row-->
      <div class="row wow fadeIn">

      	{% for image in product.getProductImages() %}
          <div class="col-lg-4 col-md-12 mb-4">
            <img src="{{ asset('image/product/' ~ image.urlImage) }}" class="img-responsive img-fluid" alt="">
          </div>
        {% endfor %}

      </div>
      <!--Grid row-->

    </div>
  </main>
  <!--Main layout-->

    {% endblock %}

    {% block footer %}
        {% include 'elements/footer.html.twig' %}
    {% endblock %}
