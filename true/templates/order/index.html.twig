{% extends 'base-admin.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="admin-page_content">
        <h1>Order index</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>OrderNumber</th>
                    <th>OrderDate</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    <td>{{ order.orderNumber }}</td>
                    <td>{{ order.orderDate ? order.orderDate|date('Y-m-d') : '' }}</td>
                    <td>
                        <a href="{{ path('order_show', {'id': order.id}) }}">show</a>
                        <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('order_new') }}">Create new</a>
    </div>
{% endblock %}
