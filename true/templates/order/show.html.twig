{% extends 'base-admin.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="admin-page_content">
        <h1>Commande</h1>
        <h4>Numéro :  <strong>{{ order.orderNumber }}</strong></h4>
        <p> Client : {{ order.client.clientName }}  {{ order.client.clientFirstName }}<p>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ order.id }}</td>
                </tr>
                {# <tr>
                    <th>Numéro de commande</th>
                    <td>{{ order.orderNumber }}</td>
                </tr> #}
                <tr>
                    <th>Date</th>
                    <td>{{ order.orderDate ? order.orderDate|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Moyen de paiement</th>
                    <td>{{ order.payment }}</td>
                </tr>
            </tbody>
        </table>

        <div>
            {% for item in list %}
                <p>{{ item.product.productName }}</p>
            {% endfor %}
        </div>

        <p> Status de la commande : {{ order.state }}</p>

        <a href="{{ path('order_index') }}">Retour</a>
        <a href="{{ path('order_edit', {'id': order.id}) }}">Modifier</a>
